<% if @order_products.size == 0 %>
  <p class="text-center">
    There are no items in your shopping cart.  Please <%= link_to "go back", root_path %> and add some items to your cart.
  </p>
<% else %>
  <div class="order-product-list">
    <div class="order-products-pres">
    You have <span class="order-products-quantity"><%= @order_products.size %> items</span> in your cart:
  </div>
  <% @order_products.each do |order_product| %>
    <%= render 'carts/cart_row', order_product: order_product %>
  <% end %>
  <div class="order-products-summary">
    <span style="margin-right: 40px;">Total = <%= humanized_money_with_symbol(@order.total_amount) %></span>
    <%= link_to "Go to checkout", checkout_index_path, class: "btn btn-primary btn-sm" %>
  </div>
  </div>
<% end %>
