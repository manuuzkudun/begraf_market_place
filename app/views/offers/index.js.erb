$( document ).ready(function() {
  $("#Site-content").fadeOut(500, function() {
    $("#Site-content").html("<%= escape_javascript(render('product_offers')) %>").hide();
    $("#Site-content").fadeIn(500);
    $(".next-section-button").hide();

    $(".offer").click( function(event) {
      var offer = event.currentTarget;
      $(offer).siblings().removeClass("offer-selected");
      $(offer).addClass("offer-selected");
      $(offer).find("input[type=radio]").prop("checked", true);
      $(".next-section-button").fadeIn(1000);
    });
  });
});


