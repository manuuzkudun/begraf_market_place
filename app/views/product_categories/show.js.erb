$("#properties-form").html("");
$("#product-offers").html("");
$("#properties-form").html("<%= escape_javascript(render('properties_form')) %>");
$('html, body').animate({
     scrollTop: $("#properties-form").offset().top
 }, 1000);


$(".property-value > img").click( function(event) {
  var selectedProp = $(event.target).parent();
  selectedProp.siblings().removeClass("selected");
  selectedProp.addClass("selected");
  $(selectedProp).find("p >input[type=radio]").prop("checked", true);
})
